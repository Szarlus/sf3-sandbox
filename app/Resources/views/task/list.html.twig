{% extends 'base.html.twig' %}

{% block title %}Tasks{% endblock %}

{% block body %}
    <div id="wrapper">
        <div id="container">
            <div id="welcome">
                <h1>Tasks</h1>
            </div>
            <div>
                <a href="{{ path('task_new') }}" class="btn btn-primary" role="button">Add new</a>
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <td>Name</td>
                            <td>Description</td>
                            <td>Due date</td>
                        </tr>
                    </thead>
                    <tbody>
                    {% for task in tasks %}
                        <tr>{% include 'task/task_row.html.twig' %}</tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
